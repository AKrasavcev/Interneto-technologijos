{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "./restaurant.schema.json",
  "title": "Restaurant",
  "type": "object",
  "properties": {
    "Restaurant": {
      "type": "object",
      "properties": {
        "Name": { "type": "string" },
        "Address": {
          "type": "object",
          "properties": {
            "@city": { "type": "string" },
            "@street": { "type": "string" }
          },
          "required": ["@city", "@street"]
        },
        "Menu": {
          "$ref": "./menu.schema.json"
        },
        "Orders": {
          "$ref": "./orders.schema.json"
        }
      },
      "required": ["Name", "Address", "Menu", "Orders"]
    }
  },
  "required": ["Restaurant"]
}
